<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context=".FormFragment">

    <TextView
        android:textSize="20dp"
        android:textColor="@color/red"
        android:id="@+id/err"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:autofillHints="Enter name"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="" />
    <EditText
        android:id="@+id/personNumberField"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:autofillHints="Enter person number"
        android:ems="10"
        android:hint="Enter person number"
        android:inputType="number" />

    <EditText
        android:id="@+id/phoneField"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:autofillHints="Enter phone number"
        android:ems="10"
        android:hint="Enter phone number"
        android:inputType="phone" />

    <CheckBox
        android:id="@+id/receiveUpdates"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:text="Receive Updates" />

    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_margin="5dp"
            android:id="@+id/radioGenderMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:layout_margin="5dp"
            android:id="@+id/raidoGenderFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />

        <RadioButton
            android:layout_margin="5dp"
            android:id="@+id/radioGenderOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other" />
    </RadioGroup>

</LinearLayout>